# Enable rewrite engine
RewriteEngine On

# Force HTTPS
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Allow direct access to health check
RewriteRule ^health\.php$ - [L]

# API Endpoints
RewriteRule ^api/auth/(login|register|refresh|logout)$ api/auth/index.php?action=$1 [QSA,L]
RewriteRule ^api/status/?$ api/status/index.php [L]
RewriteRule ^api/health/?$ health.php [L]

# Rewrite all other requests to index.php
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ index.php [QSA,L]

# Security headers
Header set X-Content-Type-Options "nosniff"
Header set X-Frame-Options "SAMEORIGIN"
Header set X-XSS-Protection "1; mode=block"
Header set Strict-Transport-Security "max-age=31536000; includeSubDomains"

# CORS headers
Header set Access-Control-Allow-Origin "https://twod3d-lottery.onrender.com"
Header set Access-Control-Allow-Methods "GET, POST, OPTIONS, PUT, DELETE"
Header set Access-Control-Allow-Headers "Content-Type, Authorization"
Header set Access-Control-Allow-Credentials "true" 